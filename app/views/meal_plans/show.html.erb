<h1>Meal Plan for <%= @meal_plan.user.name %></h1>

<div class="plan-info">
  <p><strong>Goal:</strong> <%= @meal_plan.goal %></p>
  <p><strong>Duration:</strong> <%= @meal_plan.duration_days %> days</p>
  <p><strong>Status:</strong> <%= @meal_plan.status %></p>
  <p><strong>Current Day:</strong> <%= @meal_plan.current_day + 1 %> of <%= @meal_plan.duration_days %></p>
  <p><strong>Created:</strong> <%= @meal_plan.created_at.strftime("%Y-%m-%d %H:%M") %></p>
</div>

<!-- Goal Progress Section -->
<div class="progress-section">
  <h2>Nutrition Summary</h2>
  
  <% if @nutrition_consumed[:days_tracked] > 0 %>
    <p class="progress-info">
      Based on <%= @nutrition_consumed[:days_tracked] %> day(s) of completed meals<br>
      <small>
        ‚Ä¢ Days with "Eat What I Want": Tracked your actual food choices<br>
        ‚Ä¢ Days with default recommendation: Assumed you followed our recommendation
      </small>
    </p>
    
    <!-- Overall nutrition summary -->
    <div class="nutrition-summary">
      <h3>Overall Nutrition Breakdown</h3>
      <div class="nutrition-grid">
        <div class="nutrition-card">
          <div class="nutrition-icon">üî•</div>
          <div class="nutrition-value"><%= @nutrition_consumed[:calories] %> kcal</div>
          <div class="nutrition-label">Total Calories</div>
        </div>
        <div class="nutrition-card">
          <div class="nutrition-icon">üí™</div>
          <div class="nutrition-value"><%= @nutrition_consumed[:protein].round(1) %> g</div>
          <div class="nutrition-label">Total Protein</div>
        </div>
        <div class="nutrition-card">
          <div class="nutrition-icon">üçû</div>
          <div class="nutrition-value"><%= @nutrition_consumed[:carbs].round(1) %> g</div>
          <div class="nutrition-label">Total Carbs</div>
        </div>
        <div class="nutrition-card">
          <div class="nutrition-icon">ü•ë</div>
          <div class="nutrition-value"><%= @nutrition_consumed[:fat].round(1) %> g</div>
          <div class="nutrition-label">Total Fat</div>
        </div>
        <div class="nutrition-card">
          <div class="nutrition-icon">üßÇ</div>
          <div class="nutrition-value"><%= @nutrition_consumed[:sodium] %> mg</div>
          <div class="nutrition-label">Total Sodium</div>
        </div>
      </div>
    </div>
  <% else %>
    <p class="no-progress-data">
      No meal tracking data yet. Start eating and tracking your meals to see your progress!
    </p>
  <% end %>
</div>

<h2>Detailed Meal Schedule</h2>

<% if @entries_by_day.any? %>
  <% @entries_by_day.each do |day_index, entries| %>
    <div class="day-section">
      <h3>
        Day <%= day_index + 1 %>
        <% if day_index < @meal_plan.current_day %>
          <span class="day-status past">Past Day</span>
          <% if @actual_meals_by_day[day_index].present? %>
            <span class="tracking-badge custom">Custom Choice</span>
          <% else %>
            <span class="tracking-badge default">Followed Recommendation</span>
          <% end %>
        <% elsif day_index == @meal_plan.current_day %>
          <span class="day-status current">Current Day</span>
        <% else %>
          <span class="day-status future">Future Recommendation</span>
        <% end %>
      </h3>
      
      <!-- Show actual meals if user used "Eat What I Want" for past days -->
      <% if @actual_meals_by_day[day_index].present? %>
        <h4 class="actual-meals-header">What You Actually Ate:</h4>
        <table class="actual-meals-table">
          <thead>
            <tr>
              <th>Meal</th>
              <th>Food</th>
              <th>Amount (g)</th>
              <th>Calories</th>
              <th>Protein (g)</th>
              <th>Carbs (g)</th>
              <th>Fat (g)</th>
              <th>Sodium (mg)</th>
            </tr>
          </thead>
          <tbody>
            <% @actual_meals_by_day[day_index].each do |actual_entry| %>
              <% multiplier = actual_entry.grams / 100.0 %>
              <tr class="actual-meal-row">
                <td class="meal-type">
                  <%= actual_entry.meal_type.capitalize %>
                </td>
                <td><%= actual_entry.food_item.name %></td>
                <td><%= actual_entry.grams %>g</td>
                <td><%= (actual_entry.food_item.calories_per_100g * multiplier).round %></td>
                <td><%= (actual_entry.food_item.protein_per_100g * multiplier).round(1) %></td>
                <td><%= (actual_entry.food_item.carbs_per_100g * multiplier).round(1) %></td>
                <td><%= (actual_entry.food_item.fat_per_100g * multiplier).round(1) %></td>
                <td><%= (actual_entry.food_item.sodium_mg_per_100g * multiplier).round %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <% 
          actual_total_calories = @actual_meals_by_day[day_index].sum { |e| (e.food_item.calories_per_100g * e.grams / 100.0).round } 
          actual_total_protein = @actual_meals_by_day[day_index].sum { |e| (e.food_item.protein_per_100g * e.grams / 100.0).round(1) }
          actual_total_carbs = @actual_meals_by_day[day_index].sum { |e| (e.food_item.carbs_per_100g * e.grams / 100.0).round(1) }
          actual_total_fat = @actual_meals_by_day[day_index].sum { |e| (e.food_item.fat_per_100g * e.grams / 100.0).round(1) }
          actual_total_sodium = @actual_meals_by_day[day_index].sum { |e| (e.food_item.sodium_mg_per_100g * e.grams / 100.0).round } 
        %>
        <p class="day-summary actual">
          <strong>Actual Total:</strong> 
          <% case @meal_plan.goal %>
          <% when "Low Sodium" %>
            Calories: <%= actual_total_calories %> kcal | Sodium: <%= actual_total_sodium %> mg
          <% when "Weight Loss" %>
            Calories: <%= actual_total_calories %> kcal | Fat: <%= number_with_precision(actual_total_fat, precision: 1) %> g
          <% when "Muscle Gain" %>
            Protein: <%= number_with_precision(actual_total_protein, precision: 1) %> g | Calories: <%= actual_total_calories %> kcal
          <% when "Balanced Diet" %>
            Calories: <%= actual_total_calories %> kcal | Protein: <%= number_with_precision(actual_total_protein, precision: 1) %> g | Carbs: <%= number_with_precision(actual_total_carbs, precision: 1) %> g | Fat: <%= number_with_precision(actual_total_fat, precision: 1) %> g
          <% end %>
        </p>
        
        <h4 class="recommended-header">Our Recommendation Was:</h4>
      <% end %>
      
      <!-- Always show recommended meals (default or future) -->
      <table>
        <thead>
          <tr>
            <th>Meal</th>
            <th>Food</th>
            <th>Amount (g)</th>
            <th>Calories</th>
            <th>Protein (g)</th>
            <th>Carbs (g)</th>
            <th>Fat (g)</th>
            <th>Sodium (mg)</th>
          </tr>
        </thead>
        <tbody>
          <% entries.each do |entry| %>
            <% multiplier = entry.grams / 100.0 %>
            <tr>
              <td class="meal-type">
                <%= entry.meal_type.capitalize %>
              </td>
              <td><%= entry.food_item.name %></td>
              <td><%= entry.grams %>g</td>
              <td><%= (entry.food_item.calories_per_100g * multiplier).round %></td>
              <td><%= (entry.food_item.protein_per_100g * multiplier).round(1) %></td>
              <td><%= (entry.food_item.carbs_per_100g * multiplier).round(1) %></td>
              <td><%= (entry.food_item.fat_per_100g * multiplier).round(1) %></td>
              <td><%= (entry.food_item.sodium_mg_per_100g * multiplier).round %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <% 
        day_total_calories = entries.sum { |e| (e.food_item.calories_per_100g * e.grams / 100.0).round } 
        day_total_protein = entries.sum { |e| (e.food_item.protein_per_100g * e.grams / 100.0).round(1) }
        day_total_carbs = entries.sum { |e| (e.food_item.carbs_per_100g * e.grams / 100.0).round(1) }
        day_total_fat = entries.sum { |e| (e.food_item.fat_per_100g * e.grams / 100.0).round(1) }
        day_total_sodium = entries.sum { |e| (e.food_item.sodium_mg_per_100g * e.grams / 100.0).round } 
      %>
      <p class="day-summary recommended">
        <strong><%= day_index >= @meal_plan.current_day ? "Recommended Total:" : "Original Recommendation:" %></strong> 
        <% case @meal_plan.goal %>
        <% when "Low Sodium" %>
          Calories: <%= day_total_calories %> kcal | Sodium: <%= day_total_sodium %> mg
        <% when "Weight Loss" %>
          Calories: <%= day_total_calories %> kcal | Fat: <%= number_with_precision(day_total_fat, precision: 1) %> g
        <% when "Muscle Gain" %>
          Protein: <%= number_with_precision(day_total_protein, precision: 1) %> g | Calories: <%= day_total_calories %> kcal
        <% when "Balanced Diet" %>
          Calories: <%= day_total_calories %> kcal | Protein: <%= number_with_precision(day_total_protein, precision: 1) %> g | Carbs: <%= number_with_precision(day_total_carbs, precision: 1) %> g | Fat: <%= number_with_precision(day_total_fat, precision: 1) %> g
        <% end %>
      </p>
    </div>
  <% end %>
<% else %>
  <p>No meal entries generated for this plan yet.</p>
<% end %>

<div class="actions">
  <%= link_to "Back to Home", root_path, class: "button" %>
</div>

