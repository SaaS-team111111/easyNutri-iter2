<h1>Meal Plan for <%= @meal_plan.user.name %></h1>

<div class="plan-info">
  <p><strong>Goal:</strong> <%= @meal_plan.goal %></p>
  <p><strong>Duration:</strong> <%= @meal_plan.duration_days %> days</p>
  <p><strong>Status:</strong> <%= @meal_plan.status %></p>
  <p><strong>Created:</strong> <%= @meal_plan.created_at.strftime("%Y-%m-%d %H:%M") %></p>
</div>

<h2>Detailed Meal Schedule</h2>

<% if @entries_by_day.any? %>
  <% @entries_by_day.each do |day_index, entries| %>
    <div class="day-section">
      <h3>
        Day <%= day_index + 1 %>
        <% if day_index < @meal_plan.current_day %>
          <span class="day-status past">Past Day</span>
        <% elsif day_index == @meal_plan.current_day %>
          <span class="day-status current">Current Day</span>
        <% else %>
          <span class="day-status future">Future Recommendation</span>
        <% end %>
      </h3>
      
      <!-- Show actual meals if user used "Eat What I Want" for past days -->
      <% if @actual_meals_by_day[day_index].present? %>
        <h4 class="actual-meals-header">âœ… What You Actually Ate:</h4>
        <table class="actual-meals-table">
          <thead>
            <tr>
              <th>Meal</th>
              <th>Food</th>
              <th>Amount (g)</th>
              <th>Calories</th>
              <th>Protein (g)</th>
              <th>Carbs (g)</th>
              <th>Fat (g)</th>
              <th>Sodium (mg)</th>
            </tr>
          </thead>
          <tbody>
            <% @actual_meals_by_day[day_index].each do |actual_entry| %>
              <% multiplier = actual_entry.grams / 100.0 %>
              <tr class="actual-meal-row">
                <td class="meal-type">
                  <%= actual_entry.meal_type.capitalize %>
                </td>
                <td><%= actual_entry.food_item.name %></td>
                <td><%= actual_entry.grams %>g</td>
                <td><%= (actual_entry.food_item.calories_per_100g * multiplier).round %></td>
                <td><%= (actual_entry.food_item.protein_per_100g * multiplier).round(1) %></td>
                <td><%= (actual_entry.food_item.carbs_per_100g * multiplier).round(1) %></td>
                <td><%= (actual_entry.food_item.fat_per_100g * multiplier).round(1) %></td>
                <td><%= (actual_entry.food_item.sodium_mg_per_100g * multiplier).round %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <% actual_total_calories = @actual_meals_by_day[day_index].sum { |e| (e.food_item.calories_per_100g * e.grams / 100.0).round } %>
        <% actual_total_sodium = @actual_meals_by_day[day_index].sum { |e| (e.food_item.sodium_mg_per_100g * e.grams / 100.0).round } %>
        <p class="day-summary actual">
          <strong>Actual Total:</strong> 
          Calories: <%= actual_total_calories %> kcal | 
          Sodium: <%= actual_total_sodium %> mg
        </p>
        
        <h4 class="recommended-header">ðŸ“‹ Our Recommendation Was:</h4>
      <% end %>
      
      <!-- Always show recommended meals (default or future) -->
      <table>
        <thead>
          <tr>
            <th>Meal</th>
            <th>Food</th>
            <th>Amount (g)</th>
            <th>Calories</th>
            <th>Protein (g)</th>
            <th>Carbs (g)</th>
            <th>Fat (g)</th>
            <th>Sodium (mg)</th>
          </tr>
        </thead>
        <tbody>
          <% entries.each do |entry| %>
            <% multiplier = entry.grams / 100.0 %>
            <tr>
              <td class="meal-type">
                <%= entry.meal_type.capitalize %>
              </td>
              <td><%= entry.food_item.name %></td>
              <td><%= entry.grams %>g</td>
              <td><%= (entry.food_item.calories_per_100g * multiplier).round %></td>
              <td><%= (entry.food_item.protein_per_100g * multiplier).round(1) %></td>
              <td><%= (entry.food_item.carbs_per_100g * multiplier).round(1) %></td>
              <td><%= (entry.food_item.fat_per_100g * multiplier).round(1) %></td>
              <td><%= (entry.food_item.sodium_mg_per_100g * multiplier).round %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <% day_total_calories = entries.sum { |e| (e.food_item.calories_per_100g * e.grams / 100.0).round } %>
      <% day_total_sodium = entries.sum { |e| (e.food_item.sodium_mg_per_100g * e.grams / 100.0).round } %>
      <p class="day-summary recommended">
        <strong><%= day_index >= @meal_plan.current_day ? "Recommended Total:" : "Original Recommendation:" %></strong> 
        Calories: <%= day_total_calories %> kcal | 
        Sodium: <%= day_total_sodium %> mg
      </p>
    </div>
  <% end %>
<% else %>
  <p>No meal entries generated for this plan yet.</p>
<% end %>

<div class="actions">
  <%= link_to "Back to Home", root_path, class: "button" %>
</div>

