<div class="auth-container">
  <h1>Sign In</h1>

  <%= form_with url: login_path, method: :post, local: true, class: "auth-form" do |f| %>
    <div class="field">
      <%= label_tag :username, "Username" %>
      <%= text_field_tag :username, params[:username], required: true, autofocus: true %>
    </div>

    <div class="field">
      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password, nil, required: true %>
    </div>

    <div class="actions">
      <%= submit_tag "Sign In", class: "button button-primary" %>
    </div>
  <% end %>

  <p class="auth-switch">
    No account yet?
    <%= link_to "Create one", new_account_path %>
  </p>
</div>

