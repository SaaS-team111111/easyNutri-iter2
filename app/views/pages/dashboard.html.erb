<h1>Easy-Nutri Dashboard</h1>

<div class="dashboard-container">
  <div class="action-buttons">
    <%= link_to "Create User", new_user_path, class: "button button-primary" %>
    <% if @selected_user %>
      <%= link_to "Manage User", edit_user_path(@selected_user), class: "button button-warning" %>
    <% end %>
    <%= link_to "Create Meal Plan", new_meal_plan_path, class: "button button-success" %>
  </div>

  <div class="user-selector">
    <h2>Select a User to Get Started</h2>
    
    <% if @users.any? %>
      <%= form_with url: root_path, method: :get, local: true, class: "select-form" do |f| %>
        <%= f.select :user_id, 
            options_from_collection_for_select(@users, :id, :name, params[:user_id]), 
            { prompt: "Select a user..." },
            { class: "user-select", onchange: "this.form.submit();" } %>
      <% end %>
      
      <% if @selected_user %>
        <div class="user-meal-plans">
          <h3><%= @selected_user.name %>'s Meal Plans</h3>
          
          <% if @current_meal_plan %>
            <table>
              <thead>
                <tr>
                  <th>Goal</th>
                  <th>Duration</th>
                  <th>Status</th>
                  <th>Current Day</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= @current_meal_plan.goal %></td>
                  <td><%= @current_meal_plan.duration_days %> days</td>
                  <td><span class="badge"><%= @current_meal_plan.status %></span></td>
                  <td><strong>Day <%= @current_day_number %> of <%= @total_days %></strong></td>
                  <td><%= @current_meal_plan.created_at.strftime("%Y-%m-%d") %></td>
                  <td>
                    <%= link_to "View Details", meal_plan_path(@current_meal_plan), class: "link" %>
                  </td>
                </tr>
              </tbody>
            </table>

            <% if @current_meal_plan.completed? %>
              <div class="completed-section">
                <p class="info-message">This meal plan has been completed.</p>
                <%= link_to "Create New Meal Plan", new_meal_plan_path, class: "button button-success" %>
              </div>
              
              <div id="completionModal" class="modal" <% if @just_completed %>style="display: block;"<% end %>>
                <div class="modal-content completion-modal">
                  <div class="celebration-icon">üéâüéâüéâ</div>
                  <h2>Congratulations!</h2>
                  <p class="completion-message">You've successfully completed your meal plan!</p>
                  <div class="modal-actions">
                    <button type="button" class="button button-success button-large" onclick="closeAndRedirect()">OK</button>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="today-section">
                <div class="section-header">
                  <h3>Today's Recommended Menu (Day <%= @current_day_number %>)</h3>
                  <% if @today_recommendations && @today_recommendations.any? %>
                    <button type="button" class="button button-toggle" id="toggleModeBtn" onclick="toggleMode()">
                      <span id="toggleText">üçΩÔ∏è Eat What I Want</span>
                    </button>
                  <% end %>
                </div>
                
                <!-- Simple Default View -->
                <div id="simpleView" style="display: block;">
                  <% if @today_meals.any? %>
                    <table class="meals-table">
                      <thead>
                        <tr>
                          <th>Meal Type</th>
                          <th>Food</th>
                          <th>Amount (g)</th>
                          <th>Calories</th>
                          <th>Protein (g)</th>
                          <th>Carbs (g)</th>
                          <th>Fat (g)</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% %w[breakfast lunch dinner].each do |meal_type| %>
                          <% if @today_meals[meal_type].present? %>
                            <% @today_meals[meal_type].each do |entry| %>
                              <tr>
                                <td class="meal-type"><%= meal_type.titleize %></td>
                                <td><%= entry.food_item.name %></td>
                                <td><%= entry.grams %>g</td>
                                <td><%= ((entry.food_item.calories_per_100g * entry.grams) / 100.0).round %></td>
                                <td><%= ((entry.food_item.protein_per_100g * entry.grams) / 100.0).round(1) %></td>
                                <td><%= ((entry.food_item.carbs_per_100g * entry.grams) / 100.0).round(1) %></td>
                                <td><%= ((entry.food_item.fat_per_100g * entry.grams) / 100.0).round(1) %></td>
                              </tr>
                            <% end %>
                          <% end %>
                        <% end %>
                      </tbody>
                    </table>
                  <% else %>
                    <p class="no-data">No meals found for today.</p>
                  <% end %>
                </div>

                <!-- "Eat What I Want" Customizable View -->
                <div id="customView" style="display: none;">
                  <% if @today_recommendations && @today_recommendations.any? %>
                    <form id="mealSelectionForm">
                      <div class="meal-selections">
                        <% %w[breakfast lunch dinner].each do |meal_type| %>
                          <% if @today_recommendations[meal_type].present? %>
                            <div class="meal-card">
                              <h4 class="meal-card-title"><%= meal_type.titleize %></h4>
                              
                              <div class="meal-selector">
                                <label>Choose your food:</label>
                                <select class="food-select" data-meal-type="<%= meal_type %>" onchange="updateNutrition('<%= meal_type %>')">
                                  <% @today_recommendations[meal_type].each_with_index do |rec, index| %>
                                    <option 
                                      value="<%= rec.food_item.id %>" 
                                      data-calories="<%= rec.food_item.calories_per_100g %>"
                                      data-protein="<%= rec.food_item.protein_per_100g %>"
                                      data-carbs="<%= rec.food_item.carbs_per_100g %>"
                                      data-fat="<%= rec.food_item.fat_per_100g %>"
                                      data-recommended-grams="<%= rec.recommended_grams %>"
                                      <%= 'selected' if index == 0 %>>
                                      <%= rec.food_item.name %>
                                    </option>
                                  <% end %>
                                </select>
                              </div>
                              
                              <div class="amount-selector">
                                <label>Amount (grams):</label>
                                <div class="amount-controls">
                                  <button type="button" class="amount-btn" onclick="adjustAmount('<%= meal_type %>', -50)">-50g</button>
                                  <button type="button" class="amount-btn" onclick="adjustAmount('<%= meal_type %>', -10)">-10g</button>
                                  <input 
                                    type="number" 
                                    class="amount-input" 
                                    data-meal-type="<%= meal_type %>"
                                    value="<%= @today_recommendations[meal_type].first.recommended_grams %>" 
                                    min="50" 
                                    max="1000" 
                                    step="10"
                                    onchange="updateNutrition('<%= meal_type %>')">
                                  <button type="button" class="amount-btn" onclick="adjustAmount('<%= meal_type %>', 10)">+10g</button>
                                  <button type="button" class="amount-btn" onclick="adjustAmount('<%= meal_type %>', 50)">+50g</button>
                                </div>
                              </div>
                              
                              <div class="nutrition-display" id="nutrition-<%= meal_type %>">
                                <% rec = @today_recommendations[meal_type].first %>
                                <% grams = rec.recommended_grams %>
                                <div class="nutrition-item">
                                  <span class="nutrition-label">Calories:</span>
                                  <span class="nutrition-value"><%= ((rec.food_item.calories_per_100g * grams) / 100.0).round %></span>
                                </div>
                                <div class="nutrition-item">
                                  <span class="nutrition-label">Protein:</span>
                                  <span class="nutrition-value"><%= ((rec.food_item.protein_per_100g * grams) / 100.0).round(1) %>g</span>
                                </div>
                                <div class="nutrition-item">
                                  <span class="nutrition-label">Carbs:</span>
                                  <span class="nutrition-value"><%= ((rec.food_item.carbs_per_100g * grams) / 100.0).round(1) %>g</span>
                                </div>
                                <div class="nutrition-item">
                                  <span class="nutrition-label">Fat:</span>
                                  <span class="nutrition-value"><%= ((rec.food_item.fat_per_100g * grams) / 100.0).round(1) %>g</span>
                                </div>
                              </div>
                            </div>
                          <% end %>
                        <% end %>
                      </div>
                    </form>
                  <% else %>
                    <p class="no-data">No meal recommendations for today.</p>
                  <% end %>
                </div>

                <div class="next-day-button">
                  <button type="button" class="button button-next" onclick="handleNextDay()">
                    Next Day ‚Üí
                  </button>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="no-data">No active meal plan for this user. <%= link_to "Create one now", new_meal_plan_path, class: "link" %>.</p>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p class="no-data">No users yet. Please create a user first.</p>
    <% end %>
  </div>
</div>

<% if @current_meal_plan && !@current_meal_plan.completed? %>
